// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Questions {
  id            Int      @id @default(autoincrement())
  description   String  
  answers       Answers[]

  @@map("questions")
}

model Answers {
  id              Int      @id @default(autoincrement())
  id_question     Int
  question        Questions   @relation(fields: [id_question], references: [id])
  description     String
  correct         Boolean

  @@map("answers")
}

model Participants {
  id              Int      @id @default(autoincrement())
  name            String
  phone           String?
  score           Int?
  seconds         Int?

  @@map("participants")
}